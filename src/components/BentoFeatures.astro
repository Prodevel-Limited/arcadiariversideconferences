---
import { Wifi, Video, Utensils, Zap, Users, ShieldCheck } from 'lucide-react';

const features = [
  {
    title: "Ultra-Fast Connectivity",
    description: "Symmetrical 1Gbps dedicated fiber across all suites.",
    icon: Wifi,
    class: "md:col-span-2 md:row-span-1",
  },
  {
    title: "Cinema-Grade AV",
    description: "4K laser projection and spatial audio systems.",
    icon: Video,
    class: "md:col-span-1 md:row-span-2",
  },
  {
    title: "Bespoke Catering",
    description: "From industrial street food to Michelin-star gala dinners.",
    icon: Utensils,
    class: "md:col-span-1 md:row-span-1",
  },
  {
    title: "Hybrid Ready",
    description: "Fully integrated broadcast suites for global reach.",
    icon: Zap,
    class: "md:col-span-1 md:row-span-1",
  },
  {
    title: "Expert Concierge",
    description: "Dedicated event architects to handle every detail.",
    icon: Users,
    class: "md:col-span-2 md:row-span-1",
  }
];
---

<section class="py-24 bg-brand-secondary">
  <div class="container-premium">
    <div class="mb-16">
      <h2 class="text-3xl md:text-5xl mb-4">ENGINEERED FOR EXCELLENCE</h2>
      <div class="w-24 h-1 bg-brand-accent"></div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 auto-rows-[200px]">
      {features.map((feature) => (
        <div class={`bento-card flex flex-col justify-between group ${feature.class}`}>
          <div class="flex justify-between items-start">
            <div class="p-3 bg-brand-primary border border-white/5 rounded-sm group-hover:border-brand-accent/50 transition-colors">
              <feature.icon className="w-6 h-6 text-brand-accent" />
            </div>
            <ShieldCheck className="w-4 h-4 text-white/10" />
          </div>
          <div>
            <h3 class="text-lg font-bold mb-2 tracking-normal uppercase">{feature.title}</h3>
            <p class="text-sm text-white/50 leading-relaxed">{feature.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
