---
const today = new Date();
import { SITE_TITLE, CONTACT_INFO, SOCIAL_LINKS, NAVIGATION } from '../consts';
import { Image } from 'astro:assets';
import logo from '../assets/arc_logo.PNG';
import { Linkedin, Instagram, Twitter, Youtube, ArrowUpRight, Globe, Command, Zap } from 'lucide-react';

const venueLinks = [
	{ name: 'Riverside Suite', href: '/venues/riverside-suite' },
	{ name: 'Innovation Lab', href: '/venues/innovation-lab' },
	{ name: 'Executive Boardroom', href: '/venues/boardroom' },
	{ name: 'The Studio', href: '/venues/studio' },
];
---

<footer class="bg-brand-primary border-t border-white/5 pt-40 pb-12 overflow-hidden relative">
	<!-- Blueprint Grid Overlay -->
	<div class="absolute inset-0 bg-grid opacity-5 pointer-events-none"></div>

	<div class="container-premium relative z-10">
		<!-- Section 1: The Brand Statement & Newsletter -->
		<div class="grid grid-cols-1 lg:grid-cols-12 gap-16 lg:gap-32 mb-40 items-start">
			<div class="lg:col-span-7">
				<div class="flex items-center gap-4 mb-10 text-brand-accent">
					<Command size={16} />
					<span class="text-[10px] font-bold uppercase tracking-[0.5em]">Arcadia Operational Mandate</span>
				</div>
				<h2 class="text-4xl md:text-7xl font-display font-bold text-white uppercase leading-[0.9] tracking-tighter mb-12">
					Engineering <span class="text-brand-accent italic">Exceptional</span> <br />
					Professional <span class="text-white/20">Environments.</span>
				</h2>
				<p class="text-white/40 text-xl leading-relaxed max-w-2xl font-light">
					We provide the architectural infrastructure for London's most significant corporate milestones. Our spaces are built for speed, silence, and strategy.
				</p>
			</div>
			
			<div class="lg:col-span-5 w-full">
				<div class="bg-brand-secondary border border-white/5 p-10 md:p-16 relative group">
					<div class="absolute top-0 right-0 p-6 opacity-20 text-brand-accent group-hover:opacity-100 transition-opacity">
						<Zap size={20} fill="currentColor" />
					</div>
					<h4 class="text-xs font-display font-bold uppercase tracking-[0.3em] text-white mb-6">Arcadia Intelligence</h4>
					<p class="text-xs text-white/30 mb-10 leading-relaxed font-light">Subscribe for high-fidelity updates on venue availability and East London regeneration.</p>
					<form class="space-y-4">
						<div class="relative group/input">
							<input 
								type="email" 
								placeholder="Enter Professional Email" 
								class="w-full bg-brand-primary/50 border border-white/10 px-6 py-5 text-xs text-white outline-none focus:border-brand-accent transition-all placeholder:text-white/10 rounded-none group-hover/input:border-white/20" 
							/>
						</div>
						<button class="w-full bg-brand-accent text-brand-primary font-bold uppercase tracking-[0.2em] text-[10px] py-6 hover:bg-white transition-all duration-500">
							Initialize Subscription
						</button>
					</form>
				</div>
			</div>
		</div>

		<!-- Section 2: The Command Grid -->
		<div class="grid grid-cols-2 md:grid-cols-4 gap-px bg-white/5 border border-white/5 mb-40">
			<!-- Col 1: Primary Navigation -->
			<div class="bg-brand-primary p-12 space-y-10 group hover:bg-brand-secondary transition-colors duration-500">
				<h4 class="text-[10px] font-bold uppercase tracking-[0.4em] text-white/20 mb-8 flex items-center gap-2">
					<div class="w-1.5 h-1.5 bg-brand-accent rounded-full"></div>
					Ecosystem
				</h4>
				<ul class="space-y-4">
					{NAVIGATION.map((item) => (
						<li>
							<a href={item.href} class="text-xs text-white/40 hover:text-white transition-colors uppercase tracking-widest block py-1">
								{item.name}
							</a>
						</li>
					))}
				</ul>
			</div>

			<!-- Col 2: Venue Directory -->
			<div class="bg-brand-primary p-12 space-y-10 group hover:bg-brand-secondary transition-colors duration-500">
				<h4 class="text-[10px] font-bold uppercase tracking-[0.4em] text-white/20 mb-8 flex items-center gap-2">
					<div class="w-1.5 h-1.5 bg-brand-accent rounded-full"></div>
					The Portfolio
				</h4>
				<ul class="space-y-4">
					{venueLinks.map((item) => (
						<li>
							<a href={item.href} class="text-xs text-white/40 hover:text-white transition-colors uppercase tracking-widest block py-1">
								{item.name}
							</a>
						</li>
					))}
				</ul>
			</div>

			<!-- Col 3: Operational Presence -->
			<div class="bg-brand-primary p-12 space-y-10 group hover:bg-brand-secondary transition-colors duration-500">
				<h4 class="text-[10px] font-bold uppercase tracking-[0.4em] text-white/20 mb-8 flex items-center gap-2">
					<div class="w-1.5 h-1.5 bg-brand-accent rounded-full"></div>
					Presence
				</h4>
				<ul class="space-y-4">
					{Object.entries(SOCIAL_LINKS).map(([name, url]) => (
						<li>
							<a href={url} target="_blank" rel="noopener noreferrer" class="text-xs text-white/40 hover:text-brand-accent transition-colors uppercase tracking-widest block py-1">
								{name}
							</a>
						</li>
					))}
				</ul>
			</div>

			<!-- Col 4: Technical Triage -->
			<div class="bg-brand-primary p-12 space-y-10 group hover:bg-brand-secondary transition-colors duration-500">
				<h4 class="text-[10px] font-bold uppercase tracking-[0.4em] text-white/20 mb-8 flex items-center gap-2">
					<div class="w-1.5 h-1.5 bg-brand-accent rounded-full"></div>
					Technical
				</h4>
				<div class="space-y-8">
					<div class="space-y-2">
						<span class="text-[9px] font-bold uppercase tracking-widest text-brand-accent/50 block">Operational Site</span>
						<p class="text-[11px] text-white/40 font-light leading-relaxed">{CONTACT_INFO.address}</p>
					</div>
					<div class="space-y-2">
						<span class="text-[9px] font-bold uppercase tracking-widest text-brand-accent/50 block">Enquiries</span>
						<a href={`mailto:${CONTACT_INFO.email}`} class="text-[11px] text-white/40 hover:text-white transition-colors border-b border-white/5 pb-1 block truncate">
							{CONTACT_INFO.email}
						</a>
					</div>
				</div>
			</div>
		</div>

		<!-- Section 3: The Brand Horizon (The Big Finish) -->
		<div class="relative pt-24">
			<!-- Massive Background Text -->
			<div class="absolute top-0 left-0 w-full h-full flex items-center justify-center pointer-events-none select-none">
				<span class="text-[12vw] font-display font-black text-white/[0.03] uppercase tracking-tighter leading-none whitespace-nowrap">
					ARCADIA RIVERSIDE
				</span>
			</div>

			<div class="relative z-10 flex flex-col lg:flex-row justify-between items-center gap-12 text-[9px] font-bold uppercase tracking-[0.6em] text-white/20">
				<div class="flex flex-col md:flex-row items-center gap-16">
					<div class="flex items-center gap-3">
						<div class="w-2 h-2 bg-brand-accent animate-pulse rounded-full"></div>
						<span>&copy; {today.getFullYear()} ARC-OPERATIONS</span>
					</div>
					<div class="flex items-center gap-4">
						<Globe size={12} className="text-brand-accent/40" />
						<span>LONDON EDITION v1.02</span>
					</div>
				</div>

				<div class="flex flex-wrap justify-center gap-12">
					<a href="/privacy" class="hover:text-white transition-colors">Privacy</a>
					<a href="/terms" class="hover:text-white transition-colors">Terms</a>
					<a href="/cookies" class="hover:text-white transition-colors">Compliance</a>
					<div class="text-brand-accent italic tracking-widest">Architectural Excellence</div>
				</div>
			</div>
		</div>
	</div>
</footer>
