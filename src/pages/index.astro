---
import MainLayout from '../layouts/MainLayout.astro';
import HeroSovereign from '../components/HeroSovereign';
import CommandCenter from '../components/CommandCenter';
import { getCollection } from 'astro:content';
import { Reveal } from '../components/Reveal';
import ParallaxImage from '../components/ParallaxImage';

const venues = await getCollection('venues');
---

<MainLayout>
	<HeroSovereign client:load />

	<!-- Venues Preview Section -->
	<section class="py-32 bg-brand-primary relative overflow-hidden">
		<div class="container-premium relative z-10">
			<div class="flex flex-col md:flex-row md:items-end justify-between mb-24 gap-12">
				<Reveal client:visible>
					<div>
						<span class="text-brand-accent text-xs font-bold uppercase tracking-[0.4em] mb-4 block">Our Spaces</span>
						<h2 class="text-4xl md:text-6xl font-display font-bold mb-6 uppercase tracking-tight">VENUES <span class="text-white/30 italic">THAT DELIVER</span></h2>
						<p class="text-white/40 max-w-xl text-lg leading-relaxed font-light">
							From executive boardrooms to flexible event spaces, every room is designed for focus, connection, and impact.
						</p>
					</div>
				</Reveal>
				<Reveal client:visible delay={0.4}>
					<a href="/venues" class="btn-premium">
						Explore All
					</a>
				</Reveal>
			</div>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
				{venues.map((venue, index) => (
					<Reveal client:visible delay={index * 0.2}>
						<a href={`/venues/${venue.id}`} class="group relative block aspect-[16/10] overflow-hidden bg-brand-secondary border border-white/5">
							<ParallaxImage 
								client:load
								src={typeof venue.data.heroImage === 'string' ? venue.data.heroImage : venue.data.heroImage.src} 
								alt={venue.data.title}
								className="absolute inset-0 w-full h-full opacity-40 group-hover:opacity-60 transition-opacity duration-700"
								speed={0.1}
							/>
							<div class="absolute inset-0 bg-gradient-to-t from-brand-primary via-transparent to-transparent opacity-90 z-10" />
							<div class="absolute bottom-0 left-0 p-10 w-full z-20">
								<div class="flex items-center gap-4 mb-4">
									<div class="h-[1px] w-8 bg-brand-accent"></div>
									<span class="text-[10px] font-bold uppercase tracking-[0.3em] text-brand-accent">Available Now</span>
								</div>
								<h3 class="text-3xl font-display font-bold mb-4 uppercase group-hover:translate-x-2 transition-transform duration-500">{venue.data.title}</h3>
								<div class="flex items-center gap-6 text-[10px] font-bold uppercase tracking-[0.2em] text-white/30">
									<span>{venue.data.capacity} Capacity</span>
									<span class="w-1 h-1 bg-white/10 rounded-full" />
									<span>{venue.data.sqm} SQM</span>
								</div>
							</div>
						</a>
					</Reveal>
				))}
			</div>
		</div>
	</section>

	<Reveal client:visible>
		<CommandCenter client:visible />
	</Reveal>

	<!-- Impact/Stats Section -->
	<section class="py-32 border-y border-white/5 bg-brand-secondary relative overflow-hidden">
		<div class="absolute inset-0 bg-grid opacity-5 pointer-events-none"></div>
		<div class="container-premium grid grid-cols-2 md:grid-cols-4 gap-16 text-center relative z-10">
			{[
				{ label: "Attendees Yearly", value: "15k", suffix: "+" },
				{ label: "Client Retention", value: "98", suffix: "%" },
				{ label: "Dedicated Fiber", value: "1Gbps", suffix: "" },
				{ label: "Bespoke Catering", value: "On-Site", suffix: "" }
			].map((stat, index) => (
				<Reveal client:visible delay={index * 0.1}>
					<div>
						<div class="text-5xl md:text-7xl font-display font-bold text-white mb-4">
							{stat.value}<span class="text-brand-accent">{stat.suffix}</span>
						</div>
						<div class="text-[10px] font-bold uppercase tracking-[0.4em] text-white/30">{stat.label}</div>
					</div>
				</Reveal>
			))}
		</div>
	</section>

	<!-- Final CTA -->
	<section class="py-40 bg-brand-accent relative overflow-hidden group">
		<div class="absolute inset-0 bg-brand-primary opacity-0 group-hover:opacity-5 transition-opacity duration-700"></div>
		<div class="container-premium relative z-10 text-center">
			<Reveal client:visible>
				<h2 class="text-5xl md:text-9xl font-display font-bold mb-12 text-brand-primary leading-[0.85] tracking-tighter uppercase">
					READY TO <br /> <span class="italic text-transparent bg-clip-text bg-gradient-to-r from-brand-primary to-brand-primary/60">GET STARTED?</span>
				</h2>
			</Reveal>
			<Reveal client:visible delay={0.2}>
				<p class="text-brand-primary/70 max-w-2xl mx-auto mb-16 text-xl font-medium leading-relaxed">
					Join the leading organisations already choosing Arcadia Riverside for their most important events.
				</p>
			</Reveal>
			<Reveal client:visible delay={0.4}>
				<a href="/enquire" class="inline-block px-16 py-6 bg-brand-primary text-white font-bold uppercase tracking-[0.3em] text-sm hover:scale-105 transition-all shadow-[0_20px_50px_rgba(0,0,0,0.3)] hover:shadow-2xl">
					Book a Viewing
				</a>
			</Reveal>
		</div>
		<div class="absolute -bottom-20 -left-20 w-96 h-96 bg-white/10 rounded-full blur-3xl pointer-events-none"></div>
	</section>
</MainLayout>
