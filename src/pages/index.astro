---
import MainLayout from '../layouts/MainLayout.astro';
import Hero from '../components/Hero';
import BentoFeatures from '../components/BentoFeatures.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const venues = await getCollection('venues');
---

<MainLayout>
	<Hero client:load />

	<!-- Venues Preview Section -->
		<section class="py-32 bg-brand-primary relative overflow-hidden">
			<div class="container-premium relative z-10">
				<div class="flex flex-col md:flex-row md:items-end justify-between mb-24 gap-12">
					<div>
						<span class="text-brand-accent text-xs font-bold uppercase tracking-[0.4em] mb-4 block">Our Portfolio</span>
						<h2 class="text-4xl md:text-6xl font-display font-bold mb-6">THE <span class="text-white/30 italic">SPACES</span></h2>
						<p class="text-white/40 max-w-xl text-lg leading-relaxed">
							From high-glamour suites to agile innovation labs, our spaces are engineered to inspire.
						</p>
					</div>
					<a href="/venues" class="btn-premium">
						Explore All
					</a>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 gap-12">
					{venues.map((venue) => (
						<a href={`/venues/${venue.id}`} class="group relative aspect-[16/10] overflow-hidden bg-brand-secondary border border-white/5">
							<Image 
								src={venue.data.heroImage} 
								alt={venue.data.title}
								width={1000}
								height={625}
								class="absolute inset-0 w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110 opacity-40 group-hover:opacity-60"
							/>
							<div class="absolute inset-0 bg-gradient-to-t from-brand-primary via-transparent to-transparent opacity-90" />
							<div class="absolute bottom-0 left-0 p-10 w-full">
								<div class="flex items-center gap-4 mb-4">
									<div class="h-[1px] w-8 bg-brand-accent"></div>
									<span class="text-[10px] font-bold uppercase tracking-[0.3em] text-brand-accent">Available Now</span>
								</div>
								<h3 class="text-3xl font-display font-bold mb-4 uppercase group-hover:translate-x-2 transition-transform duration-500">{venue.data.title}</h3>
								<div class="flex items-center gap-6 text-[10px] font-bold uppercase tracking-[0.2em] text-white/30">
									<span>{venue.data.capacity} Capacity</span>
									<span class="w-1 h-1 bg-white/10 rounded-full" />
									<span>{venue.data.sqm} SQM</span>
								</div>
							</div>
						</a>
					))}
				</div>
			</div>
		</section>

		<BentoFeatures />

		<!-- Impact/Stats Section -->
		<section class="py-32 border-y border-white/5 bg-brand-secondary relative">
			<div class="container-premium grid grid-cols-2 md:grid-cols-4 gap-16 text-center">
				<div>
					<div class="text-5xl md:text-7xl font-display font-bold text-white mb-4">15k<span class="text-brand-accent">+</span></div>
					<div class="text-[10px] font-bold uppercase tracking-[0.4em] text-white/30">Attendees Yearly</div>
				</div>
				<div>
					<div class="text-5xl md:text-7xl font-display font-bold text-white mb-4">98<span class="text-brand-accent">%</span></div>
					<div class="text-[10px] font-bold uppercase tracking-[0.4em] text-white/30">Client Retention</div>
				</div>
				<div>
					<div class="text-5xl md:text-7xl font-display font-bold text-white mb-4">100<span class="text-brand-accent">%</span></div>
					<div class="text-[10px] font-bold uppercase tracking-[0.4em] text-white/30">Renewable Energy</div>
				</div>
				<div>
					<div class="text-5xl md:text-7xl font-display font-bold text-white mb-4">24/7</div>
					<div class="text-[10px] font-bold uppercase tracking-[0.4em] text-white/30">Expert Support</div>
				</div>
			</div>
		</section>

		<!-- Final CTA -->
		<section class="py-40 bg-brand-accent relative overflow-hidden group">
			<div class="absolute inset-0 bg-brand-primary opacity-0 group-hover:opacity-5 transition-opacity duration-700"></div>
			<div class="container-premium relative z-10 text-center">
				<h2 class="text-5xl md:text-9xl font-display font-bold mb-12 text-brand-primary leading-[0.85] tracking-tighter">
					HOST YOUR <br /> <span class="italic text-transparent bg-clip-text bg-gradient-to-r from-brand-primary to-brand-primary/60">MILESTONE</span>
				</h2>
				<p class="text-brand-primary/70 max-w-2xl mx-auto mb-16 text-xl font-medium leading-relaxed">
					Join the global innovators who have chosen Arcadia Riverside to define their future.
				</p>
				<a href="/enquire" class="inline-block px-16 py-6 bg-brand-primary text-white font-bold uppercase tracking-[0.3em] text-sm hover:scale-105 transition-all shadow-[0_20px_50px_rgba(0,0,0,0.3)] hover:shadow-2xl">
					Secure Your Date
				</a>
			</div>
			<div class="absolute -bottom-20 -left-20 w-96 h-96 bg-white/10 rounded-full blur-3xl pointer-events-none"></div>
		</section>
</MainLayout>
